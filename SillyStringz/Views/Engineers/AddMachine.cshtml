@model Stringz.Models.Engineer

@{
    ViewData["Title"] = "Add Machine to Engineer";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/SillyStringz.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h2 class="text-center">@ViewData["Title"]</h2>
                <h4>Engineer: @Html.DisplayFor(model => model.Name)</h4>
                <hr />
                @using (Html.BeginForm("AddMachine", "Engineers", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {                        
                    @Html.HiddenFor(model => model.EngineerId)
                    
                    <div class="form-group">
                        <label for="MachineId" class="control-label">Select Machine:</label>
                        @Html.DropDownList("MachineId", null, "-- Select a Machine --", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Add Machine" class="btn btn-primary" />
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to Engineer Details", "Details", new { id = Model.EngineerId }, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>