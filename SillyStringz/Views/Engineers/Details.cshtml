@model Stringz.Models.Engineer

<!DOCTYPE html>
<html>
<head>
    <title>Engineer Details</title>
</head>
<body>
    <h2>Engineer Details</h2>
    <div>
        <h4>Engineer</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Name</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>
        </dl>
    </div>
    
    <div>
        <h4>Associated Machines</h4>
        <ul>
            @foreach(var machine in Model.JoinEntities.Select(je => je.Machine))
            {
                <li>@Html.DisplayFor(_ => machine.Name)</li>
            }
        </ul>
    </div>

    @using (Html.BeginForm("Delete", "Engineers", new { id = Model.EngineerId }, FormMethod.Post))
    {
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this?');" />
    }
    @Html.ActionLink("Edit", "Edit", new { id = Model.EngineerId }) |
    @Html.ActionLink("Back to List", "Index")
</body>
</html>