@model IEnumerable<Stringz.Models.Engineer>

<!DOCTYPE html>
<html>
<head>
    <title>Engineers</title>
</head>
<body>
    <h2>Engineers</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Associated Machines</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var engineer in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => engineer.Name)</td>
                    <td>
                        @string.Join(", ", engineer.JoinEntities.Select(je => je.Machine.Name))
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = engineer.EngineerId }) |
                        @Html.ActionLink("Details", "Details", new { id = engineer.EngineerId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.ActionLink("Add New Engineer", "Create")
</body>
</html>