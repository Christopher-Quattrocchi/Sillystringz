@model Stringz.Models.Engineer

<!DOCTYPE html>
<html>
<head>
    <title>Engineer Details</title>
    <link href="~/css/EngineerDetails.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h2>Engineer Details</h2>
    <div>
        <h4>Engineer</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Name</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>
