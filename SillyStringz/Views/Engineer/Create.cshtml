@model Stringz.Models.Engineer

<!DOCTYPE html>
<html>
<head>
    <title>Add Engineer</title>
    <link href="~/css/EngineerCreate.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h2>Add an Engineer</h2>
    @using (Html.BeginForm())
    {
        <p>@Html.LabelFor(model => model.Name): @Html.TextBoxFor(model => model.Name, new {@required = "required"})</p>
        <input name="submit" type="submit" value="Submit" />
    }
    @Html.ActionLink("Go back to Engineers", "Index")
</body>
</html>